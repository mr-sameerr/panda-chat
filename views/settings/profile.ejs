</section>

<!-- Image Cropper Modal -->
<div class="modal fade" id="imageCropperModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Crop Your Avatar</h5>
                <button type="button" id="closeBtn" class="btn-close" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="cropAvatarForm" enctype="multipart/form-data">
                    <!-- <input type="text" name="name" id="name"> -->
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                <!-- <label for="example-text-input" class="form-control-label"
                                    style="padding-bottom: 5px">Crop Image</label> -->
                                <img src="" id="cropAvatar" style="display: block; max-width: 100%;">
                                <input class="form-control" type="file" name="image" id="uploadAvatar"
                                    style="margin-bottom: 10px;">
                                <div class="error-crop-avatar validation-error">
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- <hr class="horizontal dark"> -->
                    <div class="text-center">
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
