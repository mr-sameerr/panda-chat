                                            <input type="hidden" name="avatar_name" id="avatar_name" value="">
                                        <div class="pt-2">
                                            <input type="hidden" name="avatar" id="avatar" />
                                            <i class="bi bi-upload" id="uploadAvatarBtn" style="cursor: pointer;"
                                                data-bs-toggle="modal" data-bs-target="#imageCropperModal">Upload</i>
                                            <div class="invalid-feedback first_name">
                                            </div>
                                            <!-- <button class="btn btn-primary btn-large"
                                            id="uploadAvatarBtn" style="cursor: pointer;" data-bs-toggle="modal" 
                                            data-bs-target="#imageCropperModal">Browse Image <i class="bi bi-upload"></i></button> -->
                                        </div>
                                    </div>
                                </div>
                                <div class="row mb-3">
                                    <label for="first_name" class="col-md-4 col-lg-3 col-form-label">First Name</label>
                                    <div class="col-md-8 col-lg-9">
                                        <input name="first_name" type="text" class="form-control" id="first_name"
                                            value="<%= user.first_name %>" aria-describedby="first_name">
                                        <div class="error-first_name validation-error">
                                        </div>
                                    </div>
                                </div>
                                <div class="row mb-3">
                                    <label for="last_name" class="col-md-4 col-lg-3 col-form-label">Last Name</label>
                                    <div class="col-md-8 col-lg-9">
                                        <input name="last_name" type="text" class="form-control" id="last_name"
                                            value="<%= user.last_name %>">
                                        <div class="error-last_name validation-error">
                                        </div>
                                    </div>
                                </div>
                                <div class="row mb-3">
                                    <label for="job" class="col-md-4 col-lg-3 col-form-label">Job</label>
                                    <div class="col-md-8 col-lg-9">
                                        <input name="job" type="text" class="form-control" id="job"
                                            value="<%= user.job %>">
                                        <div class="error-job validation-error">
                                        </div>
                                    </div>
                                </div>
                                <div class="row mb-3">
                                    <label for="Email" class="col-md-4 col-lg-3 col-form-label">Email</label>
                                    <div class="col-md-8 col-lg-9">
                                        <input type="email" class="form-control" value="<%= user.email %>" disabled>
                                    </div>
                                </div>
                                <div class="row mb-3">
                                    <label for="company" class="col-md-4 col-lg-3 col-form-label">Company</label>
                                    <div class="col-md-8 col-lg-9">
                                        <input name="company" type="text" class="form-control" id="company"
                                            value="<%= user.company %>">
                                        <div class="error-company validation-error">
                                        </div>
                                    </div>
                                </div>
                                <div class="row mb-3">
                                    <label for="country" class="col-md-4 col-lg-3 col-form-label">Country</label>
                                    <div class="col-md-8 col-lg-9">
                                        <input name="country" type="text" class="form-control" id="country"
                                            value="<%= user.country %>">
                                        <div class="error-country validation-error">
                                        </div>
                                    </div>
                                </div>
                                <div class="text-center">
                                    <input type="submit" class="btn btn-primary" value="Update">
                                </div>
                            </form>
                            <!-- End Profile Edit Form -->
                        </div>
